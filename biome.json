
{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100
  },
	"json": {
    "formatter": {
      "enabled": false
    }
  },
	"javascript": {
		"formatter": {
    "quoteStyle": "single",
    "semicolons": "asNeeded"
  	}
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["./node_modules/*"]
	},
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noUselessElse": "warn",
        "useSingleVarDeclarator": "warn"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  }
}

