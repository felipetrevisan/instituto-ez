{
  "name": "ez-site",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev:web": "pnpm --filter web dev",
    "dev:studio": "pnpm --filter studio dev",
    "lint:apps:check": "pnpm biome check --formatter-enabled=true --linter-enabled=true ./apps/**/src",
    "lint:apps:format": "pnpm biome format --write ./apps/**/src",
    "lint:packages:check": "pnpm biome check --formatter-enabled=true --linter-enabled=true ./packages/**/src",
    "lint:packages:format": "pnpm biome format --write ./packages/**/src",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@t3-oss/env-core": "0.13.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "17.2.0",
    "motion": "12.15.0",
    "sass": "^1.71.1",
    "vaul": "^1.1.2",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "baseline-browser-mapping": "2.10.0",
    "jsdom": "^25.0.1",
    "tailwindcss": "^4.1.7",
    "turbo": "2.5.5",
    "typescript": "^5.8",
    "vitest": "^3.2.0"
  },
  "pnpm": {
    "overrides": {
      "react": "19.2.4",
      "react-dom": "19.2.4",
      "@types/react": "19.2.14",
      "@types/react-dom": "19.2.3",
      "lucide-react": "^0.474.0",
      "baseline-browser-mapping": "2.10.0"
    }
  },
  "engines": {
    "node": "22.x"
  },
  "packageManager": "pnpm@10.24.0"
}
