{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"target": "es2024",
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"allowArbitraryExtensions": true,
		"esModuleInterop": true,
		"types": ["vitest/globals", "@testing-library/jest-dom"],
		"baseUrl": "./src",
    "paths": {
      "@ez/shared/*": ["*"]
    }
	},
	"include": ["src/**/*"],
}
